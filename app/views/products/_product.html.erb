<tr>
  <td><%= product.name %></td>
  <td><%= product.unit %></td>
  <td><%= product.price %></td>
  <td><%= product.description %></td>
  <td class="text-right">
    <%= link_to product_path(product), class: "btn btn-info btn-xs" do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to edit_product_path(product), class: "btn btn-default btn-xs" do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to product_path(product), class: "btn btn-danger btn-xs", method: :delete do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
