<div class="form-group">
  <%= f.label "Name" %>
  <%= f.text_field :name, class: "form-control", placeholder: "Name of product", required: true %>
  <span class="help-block"><i>* Require</i><span>
</div>

<div class="form-group">
  <%= f.label "Unit" %>
  <%= f.text_field :unit, class: "form-control", placeholder: "Giga", required: true %>
  <span class="help-block"><i>* Require</i><span>
</div>


<div class="form-group">
  <%= f.label "Price" %>
  <%= f.number_field :price, placeholder: "500", class: "form-control" %>
  <span class="help-block"><i>* Require</i><span>
</div>

<div class="form-group">
  <%= f.label "Descripton" %>
  <%= f.text_area :description, class: "form-control", require: true %>
</div>
