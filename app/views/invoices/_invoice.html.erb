<tr>
  <td><%= invoice.id %></td>
  <td><%= invoice.product_count %></td>
  <td><%= invoice.total_price %></td>
  <td><%= invoice.created_at %></td>
  <td class="text-right">
    <%= link_to invoice_path(invoice), class: "btn btn-info btn-xs" do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <%= link_to invoice_path(invoice), class: "btn btn-danger btn-xs", method: :delete do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
