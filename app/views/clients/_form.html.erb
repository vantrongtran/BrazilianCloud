<div class="form-group">
  <%= f.label "Name" %>
  <%= f.text_field :name, class: "form-control", placeholder: "Name of client", required: true %>
  <span class="help-block"><i>* Require</i><span>
</div>

<div class="form-group">
  <%= f.label "Email" %>
  <%= f.email_field :email, class: "form-control", placeholder: "email@email.com", required: true %>
  <span class="help-block"><i>* Require</i><span>
</div>


<div class="form-group">
  <%= f.label "Address" %>
  <%= f.text_field :address, placeholder: "Address here", class: "form-control", required: true %>
  <span class="help-block"><i>* Require</i><span>
</div>
