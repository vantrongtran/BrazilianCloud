<tr>
  <td><%= client.name %></td>
  <td><%= client.email %></td>
  <td><%= client.address %></td>
  <% if action %>
    <td class="text-right">
      <%= link_to client_path(client), class: "btn btn-info btn-xs" do %>
        <i class="fas fa-eye"></i>
      <% end %>
      <%= link_to edit_client_path(client), class: "btn btn-default btn-xs" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to client_path(client), class: "btn btn-danger btn-xs", method: :delete do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </td>
  <% end %>
</tr>
